CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic


.PHONY: clean oclean fclean all $(NAME)

all: $(NAME)

$(NAME):
	@if [ -f m.h ]; then\
		$(CC) -Wall -Werror -Wextra -pedantic $(SRC) -o $(NAME);\
	fi

clean:
	$(RM) -f $(wildcard *~) $(NAME)

oclean:
	$(RM) -f $(wildcard *.o)

fclean: oclean clean

re: fclean $(NAME)
